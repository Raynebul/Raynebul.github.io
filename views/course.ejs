                          <th scope="col">age</th>
                          <% } %>
                        </tr>
                        </thead>
                        <tbody>
                          <% for(var i=0; i < taskdatabase.length; i++) { %>
                        <tr>
                          <% if(select.id != undefined) { %>
                          <th scope="row"><%= taskdatabase[i].id %></th>
