<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/code-editor-style.css">
  <title>Редактор кода</title>
</head>
<body> 
  <script src="/js/code-script.js"></script>
  <div class="wrapper">
 <%- include('blocks/header') -%>
    <main>

      <!-- свойства для блока, содержащего контент модального окна -->
      <div id="openProfile" class="modal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="leftblocklogin">

            </div>
            <div class="rightblocklogin">
              <a href="#close" title="Close" class="close">×</a>
              <div class="login">
            <div class="modal-header">
              <h3 class="modal-title">Авторизация</h3>
            </div>
            <div class="modal-body">
              <input id="userLogin" type="text" placeholder="Введите логин или почту">
              <input id="userPassword" type="password" placeholder="Введите пароль">
              <div class="switchbox"><label class="switch" style="font-size: 0.7rem">
                <input type="checkbox">
                <span class="slider-round"></span>
              </label>
              <span id="rememberme">Запомнить меня</span>
            </div>
              <div class="modal-options">
                <button id="enter">Вход</button>
                <button class="register">Регистрация</button>
                <button class="forget">Забыли пароль?</button>
              </div>
            </div>
          </div>
          </div>
          </div>
        </div>
      </div>
      <!--  свойства для блока, содержащего контент модального окна -->

     <div class="top">
       <div class="settings">
       <span id="Project">Проект: #ProjectName</span>
       <span id="Username">от: #UserName</span>
       </div>
       <div class="buttons">
         <button class="run1" onclick="runCode()"><div id="run">Выполнить</div></button>
         <button class="button1" onclick="alertWithMessage()"><div class="button">Сохранить</div></button>
         <button class="button1" onclick="alertWithMessage()"><div class="button">Настройки</div></button>
       </div>
     </div>
 
      <div class="middle">
         <div class = "SQLScript">
                 <div class="elem1">
       <div class="sqlsquare1">
         <p>SQL Script</p>
       </div>
                   <button class = "clear1" onclick="eraseTheText('outputSQLScript')"><div class ="clear"><p>Очистить</p></div></button>
         </div>
 
     <div class="script">
       <textarea id='outputSQLScript'>
       </textarea>
     </div>
 
       </div>
         <div class = "SQLQuery">
           <div class="elem2">
       <div class="sqlsquare2">
         <p>SQL Query</p>
       </div>
             <button class = "clear1" onclick="eraseTheText('outputSQLquery')"><div class ="clear"><p>Очистить</p></div></button>
       </div>
               <aside class="query">
         <textarea id='outputSQLquery'>
       </textarea>
       </aside>
         </div>
       </div>
      <hr id="secondline">
     <div class="output">
     <div class="panel"><nav>
         <a href="#" class="active">Data output</a>
         <a href="#">Data tables</a>
         <a href="#">Messages</a>
         </nav>
         </div>
       <p></p>
     </div>
       </main>
    <%- include('blocks/footer') -%>
   </div>
 </body> 
 </html>